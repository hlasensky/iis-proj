generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["next_auth"]
}

model accounts {
  id                       String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               BigInt?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?
  userId                   String? @db.Uuid
  refresh_token_expires_in BigInt?
  users                    users?  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([provider, providerAccountId], map: "provider_unique")
  @@schema("next_auth")
}

model sessions {
  id           String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  expires      DateTime @db.Timestamptz(6)
  sessionToken String   @unique(map: "sessiontoken_unique")
  userId       String?  @db.Uuid
  users        users?   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@schema("next_auth")
}

model verification_tokens {
  identifier String?
  token      String   @id
  expires    DateTime @db.Timestamptz(6)

  @@unique([token, identifier], map: "token_identifier_unique")
  @@schema("next_auth")
}

model users {
  emailVerified DateTime?      @db.Timestamptz(6)
  image         String?
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name          String?
  email         String         @unique(map: "email_unique")
  password      String?
  address       String?
  city          String?
  country       String?
  zip           String?
  role          Roles          @default(USER)
  conference    Conference[]
  Presentation  Presentation[]
  accounts      accounts[]
  sessions      sessions[]
  Order         Order[]        @relation("OrderTousers")

  @@schema("next_auth")
}

model Conference {
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name          String
  description   String
  capacity      Int
  startTime     DateTime
  endTime       DateTime
  creatorId     String         @db.Uuid
  price         Float?
  creator       users          @relation(fields: [creatorId], references: [id])
  orders        Order[]
  presentations Presentation[]
  room          Room[]

  @@schema("next_auth")
}

model Presentation {
  id           String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name         String
  start        DateTime   @db.Timestamptz(6)
  end          DateTime   @db.Timestamptz(6)
  evaluated    Boolean?
  roomId       String?    @db.Uuid
  conferenceId String     @db.Uuid
  creatorId    String     @db.Uuid
  description  String?
  tags         String[]
  content      String?
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  creator      users      @relation(fields: [creatorId], references: [id])
  room         Room?      @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@schema("next_auth")
}

model Room {
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name          String
  capacity      Int
  conferenceId  String?        @db.Uuid
  presentations Presentation[]
  Conference    Conference?    @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@schema("next_auth")
}

model Order {
  id              String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  conferenceId    String     @db.Uuid
  numberOfTickets Int        @default(1)
  code            String     @unique(map: "code_unique") @db.Uuid
  paymentStatus   Boolean    @default(false)
  conference      Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  users           users[]    @relation("OrderTousers")

  @@schema("next_auth")
}

enum Roles {
  USER
  ADMIN

  @@schema("next_auth")
}
